<h1>List of boards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= link_to board.name, new_board_pin_path(board) %></td>
        <td><%= link_to "Destroy", board, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
